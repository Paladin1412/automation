    <test name="新签">
        <classes>
            <class name="interfacescript.joinrent.NewSign">
                <methods>
                    <include name="jointRent1" description="点击合租第一个接口"/>
                    <include name="jointRent2" description="点击合租第二个接口"/>
                    <include name="houseDetail" description="进入单个合租房源"/>
                    <include name="oneSign" description="点击单签此房"/>
                    <include name="okinfo1" description="确定个人信息1"/>
                    <include name="okinfo2" description="确定个人信息2"/>
                    <include name="okinfo3" description="确定个人信息3"/>
                    <include name="promiseMyself1" description="我承诺1"/>
                    <include name="promiseMyself2" description="我承诺2"/>
                    <include name="okPayType1" description="确认付款方式1"/>
                    <include name="okPayType2" description="确认付款方式2"/>
                    <include name="agreeContractTerms1" description="我同意上述合同条款1"/>
                    <include name="agreeContractTerms2" description="我同意上述合同条款2"/>
                    <include name="okContract" description="确认合同"/>
                    <include name="okAboveInfo1" description="我确认以上信息1"/>
                    <include name="okAboveInfo2" description="我确认以上信息2"/>
                    <include name="verificationOk" description="点击验证码确认"/>
                    <include name="getPayInfo" description="验证码后获取支付信息"/>
                    <include name="ziroom_fistPayMent" description="自如支付"/>
                </methods>
            </class>

        </classes>
    </test>
    <test name="新签物业交割">
        <classes>
            <class name="interfacescript.tenementdelivery.NewSignDelivery">
                <methods>
                    <include name="ns_TenementDeliveryAndSteward" description="扫描新签物业交割二维码"/>
                    <include name="keeperScanDelivery" description="扫描新签物业交割二维码"/>
                    <include name="CompleteSignAffirm" description="完成新签确认"/>
                    <include name="getConfigGoods" description="获取配置物品"/>
                    <include name="addConfigGoods1" description="添加物品配置"/>
                    <include name="addConfigGoods2" description="添加物品配置-获取房间名字"/>
                    <include name="getUniversalGoods" description="添加物品配置中获取物品"/>
                    <include name="configGoodsNext" description="物品配置下一步"/>
                    <include name="getPropertyKeyCards" description="获取钥匙凭证"/>
                    <include name="updatePropertyKeyCards" description="获取钥匙凭证"/>
                    <include name="getExpenses" description="获取生活费用"/>
                    <include name="updateExpenses" description="提交生活费用"/>
                    <include name="checkDelivery" description="查看物业交割"/>
                    <include name="goDelivery" description="去交割"/>
                    <include name="confirmDelivery" description="确认物业交割"/>
                    <include name="getRentAgentCode" description="获取管家"/>
                    <include name="getEvaluateProblems" description="获取页面评价信息"/>
                    <include name="putEvaluateContent" description="提交评价"/>

                </methods>
            </class>
        </classes>
    </test>


    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
</suite>